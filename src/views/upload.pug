extend base

block content 
    if errorMessage 
        span=errorMessage
    form(method="POST", action="/videos/upload")
        input(name="title",placeholder="Title", required, type="text", maxlength=100)
        input(name="description",placeholder="Description", required, type="text", maxlength=140)
        input(name="hashtags",placeholder="Hashtags, sepearted by comma.", required, type="text")
        input(type="submit", value="Upload Video")