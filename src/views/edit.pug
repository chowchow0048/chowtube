extends base.pug
    
block content 
    h4 Update Video
    form(method="POST") 
        input(name="title", placeholder="Video Title", value=video.title, required)
        input(name="description",placeholder="Description", value=video.description, required, maxlength=140)
        input(name="hashtags",placeholder="Hashtags, sepearted by comma.", value=video.hashtags.join(), required)
        input(value="save", type="submit")